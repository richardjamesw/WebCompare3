<Window x:Class="WebCompare3.View.PathDisplay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WebCompare3.View"
        mc:Ignorable="d"
        Title="PathDisplay" Height="1000" Width="1000">


    <Canvas Name="PathCanvas">
        <!-- Source node selected by the user -->
        <TextBlock Text="{Binding SrcText}" Height="20" Width="20" Canvas.Top="{Binding CenterY}" Canvas.Left="{Binding CenterX}" Panel.ZIndex="1" TextAlignment="Center" Margin="5, 5, 0, 0"/>
        <Ellipse Height="30" Width="30" Canvas.Top="{Binding CenterY}" Canvas.Left="{Binding CenterX}" Fill="Red" Panel.ZIndex="0"/>
    </Canvas>

</Window>
